{
  "name": "cypress",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open --e2e",
    "cy:run": "cypress run --e2e",
    "test": "npm run test:ordered",
    "test:api": "cypress run --e2e --spec \"e2e/api/usuarios.feature\"",
    "test:cadastro": "cypress run --e2e --spec \"e2e/frontend/cadastro.feature\"",
    "test:login": "cypress run --e2e --spec \"e2e/frontend/login.feature\"",
    "test:smoke": "cypress run --e2e --spec \"e2e/frontend/smoke.feature\"",
    "test:ordered": "npm run test:api && npm run test:cadastro && npm run test:login && npm run test:smoke",
    "test:ordered:report": "npm run allure:clean && npm run test:ordered && npm run allure:generate",
    "allure:clean": "rimraf allure-results allure-report || true",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.2.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.7",
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^15.7.0",
    "rimraf": "^6.1.2"
  }
}
